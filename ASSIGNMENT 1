# ASSIGNMENT1
#que 1
#include <iostream>
using namespace std;

int main() {
    int arr[100], n = 0, choice, pos, value, key;

    while (true) {
        cout << "\n---- MENU ----\n";
        cout << "1. CREATE\n2. DISPLAY\n3. INSERT\n4. DELETE\n5. LINEAR SEARCH\n6. EXIT\n";
        cout << "Enter choice: ";
        cin >> choice;

        switch (choice) {

        case 1:
            cout << "Enter number of elements: ";
            cin >> n;
            cout << "Enter elements:\n";
            for (int i = 0; i < n; i++)
                cin >> arr[i];
            break;

        case 2:
            cout << "Array elements: ";
            for (int i = 0; i < n; i++)
                cout << arr[i] << " ";
            cout << endl;
            break;

        case 3:
            cout << "Enter position to insert: ";
            cin >> pos;
            cout << "Enter value: ";
            cin >> value;
            for (int i = n; i >= pos; i--)
                arr[i] = arr[i - 1];
            arr[pos - 1] = value;
            n++;
            break;

        case 4:
            cout << "Enter position to delete: ";
            cin >> pos;
            for (int i = pos - 1; i < n - 1; i++)
                arr[i] = arr[i + 1];
            n--;
            break;

        case 5:
            cout << "Enter value to search: ";
            cin >> key;
            for (int i = 0; i < n; i++) {
                if (arr[i] == key) {
                    cout << "Found at position " << i + 1 << endl;
                    goto found;
                }
            }
            cout << "Not found!\n";
            found:
            break;

        case 6:
            return 0;

        default:
            cout << "Invalid choice\n";
        }
    }
}
