using namespace std;

int main() {
    int arr[100], n = 0, choice, pos, value, key;

    while (true) {
        cout << "\n---- MENU ----\n";
        cout << "1. CREATE\n2. DISPLAY\n3. INSERT\n4. DELETE\n5. LINEAR SEARCH\n6. EXIT\n";
